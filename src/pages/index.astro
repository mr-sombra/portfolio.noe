---
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/Icons/LinkedIn.astro";
import GithubIcon from "../components/Icons/Github.astro";
import MailIcon from "../components/Icons/Mail.astro";
import DownloadIcon from "../components/Icons/Download.astro";
import BriefcaseIcon from "../components/Icons/Briefcase.astro";
import CodeIcon from "../components/Icons/Code.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
---

<Layout
  title="Noe Lopez - Mechatronics Student"
  description="Take a look of my experience in the Mechatronics field"
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32">
      <img
        src="/profile.webp"
        alt="noe lopez ia pic"
        class="rounded-3xl mb-4 h-44"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, I'm Noe <a
          href="https://linkedin.com/in/noe-lopez-campos"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
          ><Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span class="text-green-800 dark:text-green-300"
          >Mechatronics engineering</span
        > student apassionated for programming, designing, robotics, automation.

        <span class="text-red-800 dark:text-red-300"
          >From Chihuahua, Mexico</span
        >.
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://linkedin.com/in/noe-lopez-campos">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/mr-sombra">
          <GithubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:noelopezcampos2003@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          noelopezcampos2003@gmail.com
        </SocialPill>
        <SocialPill href="#">
          <DownloadIcon class="size-4 md:size-6" />
          CV
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <BriefcaseIcon class="size-7" />
        Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Projects
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        About Me
      </h2>
      <About />
    </SectionContainer>

    <SectionContainer id="contact">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Contact
      </h2>
    </SectionContainer>
  </main>
</Layout>
