---
import LabVIEWIcon from "./Icons/LabVIEW.astro";
import CloudIcon from "./Icons/Cloud.astro";

const TAGS = {
  LABVIEW: {
    name: "LabVIEW",
    class: "bg-[#37383c] text-white",
    icon: LabVIEWIcon,
  },
  OPC: {
    name: "OPC Server",
    class: "bg-[#003159] text-white",
    icon: CloudIcon,
  },
};

const PROJECTS = [
  {
    title: "Vision and Control System",
    description:
      "lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum",
    link: "#",
    github: "#",
    image: "/projects/vision-project.webp",
    tags: [TAGS.LABVIEW, TAGS.OPC],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
