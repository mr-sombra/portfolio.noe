---
import ThemeSwitch from "./ThemeSwitch.astro";
---

<header
  class={`
        flex justify-center items-center
        mx-auto
        py-5
        sticky top-0
        w-full xl:w-[1120px]
        z-10
    `}
>
  <nav
    class={`
        border border-black rounded-full
        px-3 py-1
        flex flex-row items-center
        bg-neutral-200 dark:bg-black/30
        backdrop-filter backdrop-blur-2xl
    `}
  >
    <a href="#top" class="hover:bg-white/10 rounded-full px-3 transition"
      >Home</a
    >
    <a href="#experience" class="hover:bg-white/10 rounded-full px-3 transition"
      >Experience</a
    >
    <a href="#projects" class="hover:bg-white/10 rounded-full px-3 transition"
      >Projects</a
    >
    <a href="#about" class="hover:bg-white/10 rounded-full px-3 transition"
      >About</a
    >
    <a href="#contact" class="hover:bg-white/10 rounded-full px-3 transition"
      >Contact</a
    >
    <ThemeSwitch />
  </nav>
</header>
